<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/placeOrderButton"
        style="@style/PrimaryActionButton"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/create_order"
        android:textColor="#FFF"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="233dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/placeOrderButton"
            android:background="@color/black_alpha19" />

        <RelativeLayout
            android:id="@+id/add_item_row"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/placeOrderButton"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_ripple"
            tools:ignore="MissingPrefix">

            <LinearLayout
                android:id="@+id/item_highlight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="?android:attr/colorPrimary"
                android:orientation="vertical"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/itemQuantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_product_quantity"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/textProductsCounter"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="72dp"
                android:layout_toStartOf="@+id/removeItemButton"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:textColor="@color/blue_grey_900"
                    android:textSize="16sp"
                    tools:text="Produto" />

                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:maxLines="1"
                    android:textColor="@color/textSubtitle"
                    android:textSize="14sp"
                    tools:text="R$12,00" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/removeItemButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/addItemButton"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_round_button"
                    android:padding="8dp"
                    android:src="@drawable/ic_remove" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addItemButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_round_button"
                    android:padding="8dp"
                    android:src="@drawable/ic_add" />
            </RelativeLayout>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/add_item_row"
            android:background="@color/black_alpha19" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_item_row"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contentPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Produto Primário" />

                <Spinner
                    android:id="@+id/primarySpinner"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/contentSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Produto Secundário" />

                <Spinner
                    android:id="@+id/secondarySpinner"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentInstallments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Parcelas"
                    android:textStyle="" />

                <Spinner
                    android:id="@+id/installmentsSpinner"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:entries="@array/installments_array" />

            </LinearLayout>

            <EditText
                android:id="@+id/merchantCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="EC" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:hint="Email" />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/paymentButton"
        style="@style/PrimaryActionButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:text="@string/checkout"
        android:textColor="#FFF"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="233dp" />


</RelativeLayout>
